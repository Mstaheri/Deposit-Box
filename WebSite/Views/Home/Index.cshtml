<!DOCTYPE html>
<html lang="fa">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background: linear-gradient(to right, #e0eafc, #cfdef3);
            font-family: 'Tahoma', sans-serif;
            margin: 0;
            padding: 0;
            direction: rtl;
            text-align: right;
        }

        .navbar {
            background-color: #3c8dbc;
            padding: 15px;
            direction: ltr;
            text-align: left;
        }

        .navbar-brand {
            color: #fff;
            font-weight: bold;
            font-size: 1.5rem;
        }

        .navbar-nav {
            direction: ltr;
            text-align: left;
        }

            .navbar-nav .nav-link {
                color: #fff;
                font-size: 1rem;
                padding: 10px 15px;
            }

                .navbar-nav .nav-link:hover {
                    background-color: #357ca5;
                    border-radius: 5px;
                }

        .sidebar {
            min-height: 100vh;
            background-color: #2c3e50;
            color: #ecf0f1;
            padding-top: 20px;
            position: fixed;
            top: 0;
            bottom: 0;
            right: 0;
            width: 250px;
            transition: width 0.3s;
        }

            .sidebar:hover {
                width: 300px;
            }

            .sidebar a {
                color: #ecf0f1;
                padding: 10px 20px;
                display: block;
                border-radius: 5px;
                transition: background-color 0.3s, padding-right 0.3s;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #34495e;
                    padding-right: 30px;
                }

                .sidebar a.active {
                    background-color: #3c8dbc;
                }

        .main-content {
            margin-right: 250px;
            padding: 20px;
            direction: rtl;
            text-align: right;
        }

        .dashboard-section {
            background-color: #fff;
            border-radius: 20px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

            .dashboard-section h2 {
                color: #3c8dbc;
                margin-bottom: 20px;
            }

        .chart-container {
            position: relative;
            height: 500px;
            width: 100%;
            margin-bottom: 40px;
        }

        .chat-box {
            position: fixed;
            bottom: 20px;
            left: 20px;
            width: 300px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            border-radius: 10px;
            overflow: hidden;
            background-color: #fff;
            z-index: 1000;
        }

            .chat-box .card-header {
                background-color: #3c8dbc;
                color: #fff;
                padding: 15px;
                font-weight: bold;
                direction: rtl;
            }

            .chat-box .card-body {
                max-height: 200px;
                overflow-y: auto;
                padding: 10px;
                background-color: #f9f9f9;
                direction: rtl;
                text-align: right;
            }

            .chat-box .card-footer {
                padding: 10px;
                background-color: #f1f1f1;
                border-top: 1px solid #ddd;
                direction: rtl;
                text-align: right;
            }

                .chat-box .card-footer input {
                    border: 1px solid #ddd;
                    border-radius: 5px;
                    padding: 5px;
                    width: calc(100% - 75px);
                    margin-left: 10px;
                }


                .chat-box .card-footer button {
                    background-color: #3c8dbc;
                    color: #fff;
                    border: none;
                    border-radius: 5px;
                    padding: 5px 15px;
                    cursor: pointer;
                }

                    .chat-box .card-footer button:hover {
                        background-color: #357ca5;
                    }
    </style>
</head>

<body>
    <div class="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link active" href="@Url.Action("Index", "Home")">داشبورد</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("BankSafe", "Home")">صندوق‌ها</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("BankSafeTransactions", "Home")">تراکنش ها</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("BankSafeDocument", "Home")">چک‌ها</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">امانات</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("User", "Home")">کاربران</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("BankAccount", "Home")">حساب کاربران</a>
            </li>
        </ul>
    </div>

    <div class="main-content">
        <div class="dashboard-section">
            <h2>نمودارها و اطلاعات داشبورد</h2>
            <div class="row">
                <div class="col-md-6">
                    <div class="chart-container">
                        <canvas id="myChart"></canvas>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="chart-container">
                        <canvas id="myPieChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="chart-container">
                        <canvas id="myLineChart"></canvas>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="chart-container">
                        <canvas id="myDoughnutChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="chart-container">
                        <canvas id="myMixedChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="chat-box card">
        <div class="card-header">
            <b>پشتیبانی آنلاین</b>
        </div>
        <div id="MessagePanel" class="card-body">
            <ul id="Messages">
                <!-- پیام‌ها به صورت داینامیک اضافه می‌شوند -->
            </ul>
        </div>
        <div class="card-footer">
            <form id="NewMessageForm">
                <input id="MessageInput" class="form-control" placeholder="پیام خود را وارد کنید..." />
                <button class="btn btn-primary" type="submit">ارسال</button>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['ژانویه', 'فوریه', 'مارس', 'آوریل', 'مه', 'ژوئن'],
                datasets: [{
                    label: 'میزان سهم',
                    data: [12, 19, 3, 5, 2, 3],
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        var ctxPie = document.getElementById('myPieChart').getContext('2d');
        var myPieChart = new Chart(ctxPie, {
            type: 'pie',
            data: {
                labels: ['قرمز', 'آبی', 'سبز'],
                datasets: [{
                    label: 'توزیع درصد',
                    data: [10, 20, 30],
                    backgroundColor: ['#ff6384', '#36a2eb', '#4bc0c0'],
                    borderColor: '#fff',
                    borderWidth: 1
                }]
            }
        });

        var ctxLine = document.getElementById('myLineChart').getContext('2d');
        var myLineChart = new Chart(ctxLine, {
            type: 'line',
            data: {
                labels: ['ژانویه', 'فوریه', 'مارس', 'آوریل', 'مه', 'ژوئن'],
                datasets: [{
                    label: 'میزان فروش',
                    data: [15, 25, 10, 20, 30, 40],
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1,
                    fill: true
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        var ctxDoughnut = document.getElementById('myDoughnutChart').getContext('2d');
        var myDoughnutChart = new Chart(ctxDoughnut, {
            type: 'doughnut',
            data: {
                labels: ['قرمز', 'آبی', 'سبز'],
                datasets: [{
                    label: 'توزیع درصد',
                    data: [25, 35, 40],
                    backgroundColor: ['#ff6384', '#36a2eb', '#4bc0c0'],
                    borderColor: '#fff',
                    borderWidth: 1
                }]
            }
        });

        var ctxMixed = document.getElementById('myMixedChart').getContext('2d');
        var myMixedChart = new Chart(ctxMixed, {
            type: 'bar',
            data: {
                labels: ['ژانویه', 'فوریه', 'مارس', 'آوریل', 'مه', 'ژوئن'],
                datasets: [{
                    label: 'میزان فروش',
                    type: 'line',
                    data: [15, 25, 10, 20, 30, 40],
                    borderColor: 'rgba(75, 192, 192, 1)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    fill: true,
                    yAxisID: 'y-axis-1'
                }, {
                    label: 'میزان سود',
                    type: 'bar',
                    data: [10, 20, 5, 15, 25, 35],
                    backgroundColor: 'rgba(153, 102, 255, 0.2)',
                    borderColor: 'rgba(153, 102, 255, 1)',
                    borderWidth: 1,
                    yAxisID: 'y-axis-2'
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        type: 'linear',
                        display: true,
                        position: 'left',
                        id: 'y-axis-1'
                    }, {
                        type: 'linear',
                        display: true,
                        position: 'right',
                        id: 'y-axis-2',
                        gridLines: {
                            drawOnChartArea: false
                        }
                    }]
                }
            }
        });
    </script>
</body>

</html>
